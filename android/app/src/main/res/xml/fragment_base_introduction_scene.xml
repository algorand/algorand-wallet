<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@id/introductionContentScrollView"
            app:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <ConstraintOverride android:id="@id/closeButton" />

        <ConstraintOverride android:id="@id/introductionContentLayout" />

        <ConstraintOverride android:id="@id/introductionContentScrollView" />

        <ConstraintOverride android:id="@id/introductionTitleFlow" />

        <ConstraintOverride android:id="@id/introductionTitleTextView" />

        <ConstraintOverride
            android:id="@id/featureTagTextView"
            app:visibilityMode="ignore" />

        <ConstraintOverride android:id="@id/introductionDescriptionTextView" />

        <ConstraintOverride android:id="@id/introductionContentViewStub" />

        <ConstraintOverride android:id="@id/bottomGradientView" />

        <ConstraintOverride android:id="@id/actionButton" />

        <Constraint
            android:id="@id/introductionImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="375:180"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <ConstraintOverride android:id="@id/introductionContentScrollView" />

        <ConstraintOverride android:id="@id/closeButton" />

        <ConstraintOverride android:id="@id/introductionContentLayout" />

        <ConstraintOverride android:id="@id/introductionContentScrollView" />

        <ConstraintOverride android:id="@id/introductionTitleFlow" />

        <ConstraintOverride android:id="@id/introductionTitleTextView" />

        <ConstraintOverride
            android:id="@id/featureTagTextView"
            app:visibilityMode="ignore" />

        <ConstraintOverride android:id="@id/introductionDescriptionTextView" />

        <ConstraintOverride android:id="@id/introductionContentViewStub" />

        <ConstraintOverride android:id="@id/bottomGradientView" />

        <ConstraintOverride android:id="@id/actionButton" />

        <Constraint
            android:id="@id/introductionImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="375:130"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

</MotionScene>
