<resources>

    <style name="PeraMaterialButton" />

    <style name="PeraMaterialButtonProgressBarStyle" parent="Widget.AppCompat.ProgressBar" />

    <style name="PeraMaterialButtonProgressBarStyle.Primary">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/background</item>
        <item name="android:colorAccent">@color/background</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="PeraMaterialButtonProgressBarStyle.Secondary">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/text_main</item>
        <item name="android:colorAccent">@color/text_main</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="PeraMaterialButton.Primary">
        <item name="materialButtonStyle">@style/Button.Primary</item>
        <item name="android:progressBarStyle">@style/PeraMaterialButtonProgressBarStyle.Primary</item>
    </style>

    <style name="PeraMaterialButton.Secondary">
        <item name="materialButtonStyle">@style/Button.Secondary</item>
        <item name="android:progressBarStyle">@style/PeraMaterialButtonProgressBarStyle.Secondary</item>
    </style>

</resources>
