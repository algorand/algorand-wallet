<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/spacing_xlarge"
    android:paddingBottom="@dimen/bottom_safe_area_margin"
    tools:context=".modules.informationbottomsheet.ui.BaseInformationBottomSheet">

    <View
        style="@style/BottomSheetModalityLine"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_small" />

    <TextView
        android:id="@+id/informationTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxxlarge"
        android:textAppearance="@style/TextAppearance.Body.Large.Sans.Medium"
        tools:text="@tools:sample/lorem[4]" />

    <TextView
        android:id="@+id/informationDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:textAppearance="@style/TextAppearance.Body.Sans"
        tools:text="@tools:sample/lorem[24]" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/neutralButton"
        style="@style/Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        tools:text="@tools:sample/lorem[1]" />

</LinearLayout>
