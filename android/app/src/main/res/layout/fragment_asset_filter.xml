<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hideNoBalanceAssetsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_xlarge"
            android:layout_marginTop="@dimen/spacing_xxxxlarge"
            android:text="@string/hide_assets_with_no_balance"
            android:textAppearance="@style/TextAppearance.Body.Sans"
            app:layout_constraintEnd_toStartOf="@id/hideNoBalanceAssetsSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/lorem[10]" />

        <TextView
            android:id="@+id/hideNoBalanceAssetsDescriptionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:text="@string/you_can_show_hide_assets"
            android:textAppearance="@style/TextAppearance.Footnote"
            android:textColor="@color/text_gray"
            app:layout_constraintEnd_toEndOf="@id/hideNoBalanceAssetsLabel"
            app:layout_constraintStart_toStartOf="@id/hideNoBalanceAssetsLabel"
            app:layout_constraintTop_toBottomOf="@id/hideNoBalanceAssetsLabel"
            tools:text="@tools:sample/lorem[10]" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/hideNoBalanceAssetsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_xlarge"
            app:layout_constraintBottom_toBottomOf="@id/hideNoBalanceAssetsLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/hideNoBalanceAssetsLabel" />

        <TextView
            android:id="@+id/displayNFTInAssetsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_xlarge"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            android:text="@string/display_nfts_in_asset_list"
            android:textAppearance="@style/TextAppearance.Body.Sans"
            app:layout_constraintEnd_toStartOf="@id/displayNFTInAssetsSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hideNoBalanceAssetsDescriptionLabel"
            tools:text="@tools:sample/lorem[10]" />

        <TextView
            android:id="@+id/displayNFTInAssetsDescriptionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:text="@string/nfts_assets_will_be_shown"
            android:textAppearance="@style/TextAppearance.Footnote"
            android:textColor="@color/text_gray"
            app:layout_constraintEnd_toEndOf="@id/displayNFTInAssetsLabel"
            app:layout_constraintStart_toStartOf="@id/displayNFTInAssetsLabel"
            app:layout_constraintTop_toBottomOf="@id/displayNFTInAssetsLabel"
            tools:text="@tools:sample/lorem[10]" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/displayNFTInAssetsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_xlarge"
            app:layout_constraintBottom_toBottomOf="@id/displayNFTInAssetsLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/displayNFTInAssetsLabel" />

        <TextView
            android:id="@+id/displayOptedInNFTInAssetsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_xlarge"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            android:text="@string/display_opted_in_nfts"
            android:textAppearance="@style/TextAppearance.Body.Sans"
            app:layout_constraintEnd_toStartOf="@id/displayOptedInNFTInAssetsSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/displayNFTInAssetsDescriptionLabel"
            tools:text="@tools:sample/lorem[10]" />

        <TextView
            android:id="@+id/displayOptedInNFTInAssetsDescriptionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:text="@string/you_can_show_hide_nfts"
            android:textAppearance="@style/TextAppearance.Footnote"
            android:textColor="@color/text_gray"
            app:layout_constraintEnd_toEndOf="@id/displayOptedInNFTInAssetsLabel"
            app:layout_constraintStart_toStartOf="@id/displayOptedInNFTInAssetsLabel"
            app:layout_constraintTop_toBottomOf="@id/displayOptedInNFTInAssetsLabel"
            tools:text="@tools:sample/lorem[10]" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/displayOptedInNFTInAssetsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_xlarge"
            app:layout_constraintBottom_toBottomOf="@id/displayOptedInNFTInAssetsLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/displayOptedInNFTInAssetsLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
